generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String              @id @default(cuid())
  name                    String?
  email                   String?             @unique
  username                String?             @unique
  hashedPassword          String?
  emailVerified           DateTime?
  verificationToken       String?
  verificationTokenExpiry DateTime?
  resetToken              String?
  resetTokenExpiry        DateTime?
  image                   String?
  createdAt               DateTime            @default(now())
  updatedAt               DateTime            @updatedAt
  roleId                  String?
  accounts                Account[]
  comments                Comment[]           @relation("UserComments")
  likes                   Like[]              @relation("UserLikes")
  ideas                   Idea[]              @relation("UserIdeas")
  projects                Project[]           @relation("UserProjects")
  sessions                Session[]
  role                    Role?               @relation(fields: [roleId], references: [id])
  conversations           Conversation[]
  messages                Message[]
  ideaCollaborations      IdeaCollaboration[]
}

model Idea {
  id            String              @id @default(cuid())
  title         String
  content       String
  authorId      String
  author        User                @relation("UserIdeas", fields: [authorId], references: [id])
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  comments      Comment[]           @relation("IdeaComments")
  likes         Like[]              @relation("IdeaLikes")
  collaborators IdeaCollaboration[]
  allowCollab   Boolean             @default(true)
  isConverted   Boolean             @default(false)
  projectId     String?             @unique
  project       Project?            @relation(fields: [projectId], references: [id])
  postcode      String?
  latitude      Float?
  longitude     Float?
  what3words    String?
  categories    Category[]          @relation("IdeaCategories")
  images        IdeaImage[]         @relation("IdeaImages")
}

model Project {
  id            String         @id @default(cuid())
  title         String
  description   String
  postcode      String
  latitude      Float
  longitude     Float
  progress      Int            @default(0)
  status        ProjectStatus  @default(PROPOSED)
  progressNotes String?
  authorId      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  comments      Comment[]
  likes         Like[]
  author        User           @relation("UserProjects", fields: [authorId], references: [id])
  images        ProjectImage[] @relation("ProjectImages")
  categories    Category[]     @relation("ProjectCategories")
  idea          Idea? // Optional Idea association
  what3words    String?
}

model IdeaCollaboration {
  id        String              @id @default(cuid())
  ideaId    String
  userId    String
  status    CollaborationStatus @default(PENDING)
  createdAt DateTime            @default(now())

  idea Idea @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([ideaId, userId])
}

enum CollaborationStatus {
  PENDING
  APPROVED
  REJECTED
}

model Comment {
  id        String    @id @default(cuid())
  content   String
  authorId  String
  ideaId    String?
  projectId String?
  parentId  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  author    User      @relation("UserComments", fields: [authorId], references: [id], onDelete: Cascade)
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")
  project   Project?  @relation(fields: [projectId], references: [id])
  idea      Idea?     @relation("IdeaComments", fields: [ideaId], references: [id])
  likes     Like[]
  isVisible Boolean   @default(true)
  likeCount Int       @default(0)

  @@index([parentId, createdAt])
}

model Like {
  id        String   @id @default(cuid())
  ideaId    String?
  projectId String?
  commentId String?
  userId    String
  createdAt DateTime @default(now())

  comment Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  idea    Idea?    @relation("IdeaLikes", fields: [ideaId], references: [id], onDelete: Cascade)
  user    User     @relation("UserLikes", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([ideaId, userId])
  @@unique([projectId, userId])
  @@unique([commentId, userId])
  @@index([ideaId])
  @@index([projectId])
  @@index([commentId])
}

model ProjectImage {
  id        String   @id @default(cuid())
  url       String
  projectId String
  createdAt DateTime @default(now())

  project Project @relation("ProjectImages", fields: [projectId], references: [id], onDelete: Cascade)
}

model IdeaImage {
  id        String   @id @default(cuid())
  url       String
  ideaId    String
  createdAt DateTime @default(now())

  idea Idea @relation("IdeaImages", fields: [ideaId], references: [id], onDelete: Cascade)
}

model Category {
  id       String    @id
  name     String    @unique
  icon     String
  projects Project[] @relation("ProjectCategories")
  ideas    Idea[]    @relation("IdeaCategories")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Role {
  id    String @id
  name  String @unique
  icon  String
  users User[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Conversation {
  id        String    @id @default(cuid())
  users     User[]
  messages  Message[] @relation("ConversationMessages")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Message {
  id             String    @id @default(cuid())
  content        String?
  attachmentUrl  String?
  senderId       String
  conversationId String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  readAt         DateTime?
  deliveredAt    DateTime?

  sender       User         @relation(fields: [senderId], references: [id])
  conversation Conversation @relation("ConversationMessages", fields: [conversationId], references: [id], onDelete: Cascade)
}

enum ProjectStatus {
  PROPOSED
  IN_PROGRESS
  COMPLETED
  REJECTED
}
